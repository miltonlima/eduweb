@model MvcSaed.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white py-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle fa-3x me-3"></i>
                            <div>
                                <h3 class="mb-0">Meu Perfil</h3>
                                <small class="opacity-75">Gerencie suas informações pessoais</small>
                            </div>
                        </div>
                        <div class="profile-actions">
                            <a asp-action="ChangePassword" class="btn btn-light btn-sm">
                                <i class="fas fa-key me-2"></i>
                                Alterar Senha
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div asp-validation-summary="All" class="mb-0"></div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post" class="needs-validation" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="DataCriacao" type="hidden" />
                        <input asp-for="UltimoAcesso" type="hidden" />
                        <input asp-for="UltimoLogin" type="hidden" />
                        
                        <div class="row">
                            <!-- Informações Pessoais -->
                            <div class="col-md-8">
                                <h5 class="text-info mb-3">
                                    <i class="fas fa-user me-2"></i>
                                    Informações Pessoais
                                </h5>
                                
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="Nome" class="form-label">
                                            <i class="fas fa-user me-2 text-info"></i>
                                            @Html.DisplayNameFor(m => m.Nome)
                                        </label>
                                        <input asp-for="Nome" class="form-control" 
                                               placeholder="Digite seu nome completo" required />
                                        <span asp-validation-for="Nome" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label">
                                            <i class="fas fa-envelope me-2 text-info"></i>
                                            @Html.DisplayNameFor(m => m.Email)
                                        </label>
                                        <input asp-for="Email" class="form-control" 
                                               placeholder="Digite seu email" required />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PhoneNumber" class="form-label">
                                            <i class="fas fa-phone me-2 text-info"></i>
                                            @Html.DisplayNameFor(m => m.PhoneNumber)
                                        </label>
                                        <input asp-for="PhoneNumber" class="form-control" 
                                               placeholder="(XX) XXXXX-XXXX" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Funcao" class="form-label">
                                        <i class="fas fa-briefcase me-2 text-info"></i>
                                        @Html.DisplayNameFor(m => m.Funcao)
                                    </label>
                                    <input asp-for="Funcao" class="form-control" 
                                           placeholder="Ex: Professor, Coordenador, Administrador" />
                                    <span asp-validation-for="Funcao" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Observacoes" class="form-label">
                                        <i class="fas fa-sticky-note me-2 text-info"></i>
                                        @Html.DisplayNameFor(m => m.Observacoes)
                                    </label>
                                    <textarea asp-for="Observacoes" class="form-control" rows="3" 
                                              placeholder="Observações adicionais sobre seu perfil"></textarea>
                                    <span asp-validation-for="Observacoes" class="text-danger small"></span>
                                    <div class="form-text">
                                        <small>Máximo 500 caracteres</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Informações da Conta -->
                            <div class="col-md-4">
                                <h5 class="text-secondary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Informações da Conta
                                </h5>
                                
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <small class="text-muted d-block">
                                                <i class="fas fa-calendar-plus me-2"></i>
                                                Conta criada em:
                                            </small>
                                            <strong>@Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")</strong>
                                        </div>

                                        @if (Model.UltimoLogin.HasValue)
                                        {
                                            <div class="mb-3">
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-sign-in-alt me-2"></i>
                                                    Último login:
                                                </small>
                                                <strong>@Model.UltimoLogin.Value.ToString("dd/MM/yyyy 'às' HH:mm")</strong>
                                            </div>
                                        }

                                        @if (Model.UltimoAcesso.HasValue)
                                        {
                                            <div class="mb-0">
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-clock me-2"></i>
                                                    Último acesso:
                                                </small>
                                                <strong>@Model.UltimoAcesso.Value.ToString("dd/MM/yyyy 'às' HH:mm")</strong>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <div class="alert alert-info" role="alert">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        <strong>Segurança:</strong> Seus dados são protegidos e criptografados.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Voltar ao Início
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-info btn-lg">
                                    <i class="fas fa-save me-2"></i>
                                    Salvar Alterações
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center bg-light py-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        As alterações entram em vigor imediatamente após salvar
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Phone number formatting
        document.getElementById('PhoneNumber').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 11) {
                value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
            } else if (value.length >= 7) {
                value = value.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3');
            } else if (value.length >= 3) {
                value = value.replace(/(\d{2})(\d{0,5})/, '($1) $2');
            }
            e.target.value = value;
        });

        // Character counter for observations
        const observacoesField = document.getElementById('Observacoes');
        if (observacoesField) {
            const maxLength = 500;
            const charCounter = document.createElement('small');
            charCounter.className = 'text-muted float-end';
            observacoesField.parentNode.appendChild(charCounter);

            function updateCounter() {
                const remaining = maxLength - observacoesField.value.length;
                charCounter.textContent = `${observacoesField.value.length}/${maxLength} caracteres`;
                charCounter.className = remaining < 50 ? 'text-warning float-end' : 'text-muted float-end';
            }

            observacoesField.addEventListener('input', updateCounter);
            updateCounter(); // Initial count
        }

        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Smooth scroll for alerts
        if (document.querySelector('.alert')) {
            document.querySelector('.alert').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    </script>
}

<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #0dcaf0 0%, #0aa2c0 100%);
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .form-control:focus {
        border-color: #0dcaf0;
        box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
    }
    
    .btn-info {
        background: linear-gradient(135deg, #0dcaf0 0%, #0aa2c0 100%);
        border: none;
        color: white;
    }
    
    .btn-info:hover {
        background: linear-gradient(135deg, #0aa2c0 0%, #0891a5 100%);
        transform: translateY(-1px);
        color: white;
    }
    
    .form-control, .form-select {
        border-radius: 8px;
    }
    
    .profile-actions .btn {
        border-radius: 20px;
        padding: 0.375rem 1rem;
    }

    .card-body .card {
        border-radius: 10px;
    }

    @@media (max-width: 767.98px) {
        .profile-actions {
            margin-top: 1rem;
        }
        
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }
        
        .profile-actions .btn {
            width: 100%;
        }
    }
</style>