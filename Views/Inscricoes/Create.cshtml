@model MvcSaed.Models.InscricaoTurma
@{
    ViewData["Title"] = "Nova Inscrição";
    var pessoas = (ViewBag.Pessoas as List<MvcSaed.Models.Pessoa>) ?? new List<MvcSaed.Models.Pessoa>();
    var turmas = (ViewBag.Turmas as List<MvcSaed.Models.Turma>) ?? new List<MvcSaed.Models.Turma>();
}
<h1>Nova Inscrição de Aluno em Turma</h1>
<hr />

@if (!pessoas.Any())
{
    <div class="alert alert-warning">
        <strong>Atenção!</strong> Não há pessoas cadastradas. 
        <a asp-controller="Pessoas" asp-action="Create" class="btn btn-sm btn-primary">Cadastrar Pessoa</a>
    </div>
}

@if (!turmas.Any())
{
    <div class="alert alert-warning">
        <strong>Atenção!</strong> Não há turmas cadastradas. 
        <a asp-controller="Turmas" asp-action="Create" class="btn btn-sm btn-primary">Cadastrar Turma</a>
    </div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
        <label for="PessoaId" class="form-label">Aluno *</label>
        <select asp-for="PessoaId" class="form-select" required>
            <option value="">Selecione um aluno...</option>
            @foreach (var p in pessoas)
            {
                <option value="@p.Id">@p.Nome (@p.Matricula)</option>
            }
        </select>
        <span asp-validation-for="PessoaId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="TurmaId" class="form-label">Turma *</label>
        <select asp-for="TurmaId" class="form-select" required>
            <option value="">Selecione uma turma...</option>
            @foreach (var t in turmas)
            {
                <option value="@t.Id">@t.Nome</option>
            }
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Inscrever Aluno" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</form>
