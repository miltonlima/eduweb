@model IEnumerable<MvcSaed.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
}
<h1>Cursos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p><a asp-action="Create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Cadastrar Novo Curso
</a></p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Turma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td><span class="badge bg-primary">@item.Id</span></td>
            <td>@item.Nome</td>
            <td>
                @if (!item.CursosTurmas.Any())
                {
                    <span>(Nenhuma)</span>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var mt in item.CursosTurmas)
                        {
                            <li><span class="badge bg-secondary me-2">@mt.Turma.Id</span>@mt.Turma.Nome</li>
                        }
                    </ul>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Detalhes
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Editar
                </a>
                @if (!item.CursosTurmas.Any())
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                }
                else
                {
                    <span class="btn btn-outline-secondary btn-sm disabled" title="Não é possível excluir: curso possui turmas vinculadas">
                        <i class="fas fa-ban"></i> Excluir
                    </span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
