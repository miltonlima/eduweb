@model MvcSaed.Models.Modalidade
@{
    ViewData["Title"] = "Excluir Modalidade";
    var possuiTurmas = (bool)ViewBag.PossuiTurmas;
    var quantidadeTurmas = (int)ViewBag.QuantidadeTurmas;
}

<h1>Excluir Modalidade</h1>

@if (possuiTurmas)
{
    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Não é possível excluir esta modalidade</h4>
        <p>Esta modalidade possui <strong>@quantidadeTurmas turma(s)</strong> vinculada(s). Para excluir a modalidade, primeiro você deve:</p>
        <ol>
            <li>Editar a modalidade e desmarcar todas as turmas</li>
            <li>Ou transferir as turmas para outra modalidade</li>
            <li>Depois voltar aqui para excluir</li>
        </ol>
    </div>
    
    <h3>Turmas vinculadas a esta modalidade:</h3>
    <div class="card">
        <div class="card-body">
            <ul class="list-group list-group-flush">
                @foreach (var mt in Model.ModalidadesTurmas)
                {
                    <li class="list-group-item d-flex align-items-center">
                        <span class="badge bg-secondary me-2">@mt.Turma.Id</span>
                        <strong>@mt.Turma.Nome</strong>
                        <span class="ms-auto text-muted">
                            @mt.Turma.DataInicio?.ToString("dd/MM/yyyy") - 
                            @mt.Turma.DataFim?.ToString("dd/MM/yyyy")
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar e Desvincular Turmas
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4><i class="fas fa-question-circle"></i> Confirmar Exclusão</h4>
        <p>Tem certeza que deseja excluir esta modalidade? Esta ação não pode ser desfeita.</p>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Detalhes da Modalidade</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9"><span class="badge bg-primary">@Model.Id</span></dd>
                
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9"><strong>@Model.Nome</strong></dd>
                
                <dt class="col-sm-3">Turmas</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">
                        <i class="fas fa-check"></i> Nenhuma turma vinculada
                    </span>
                </dd>
            </dl>
        </div>
    </div>
    
    <div class="mt-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir esta modalidade?')">
                <i class="fas fa-trash"></i> Confirmar Exclusão
            </button>
        </form>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-info-circle"></i> Ver Detalhes
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>
}